{
  "name": "@invoice/electron",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "tsc",
    "prepare-wk": "node ./scripts/copy-wkhtmltopdf.js",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@invoice/api": "*",
    "@invoice/shared": "*",
    "@prisma/client": "^5.22.0",
    "wkhtmltopdf-installer": "^0.3.2",
    "dotenv": "^17.2.3",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "33.2.1",
    "electron-builder": "^25.1.8",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.invoice.generator",
    "productName": "Invoice Generator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../web/dist",
        "to": "web"
      },
      {
        "from": "../api/prisma",
        "to": "prisma"
      },
      {
        "from": "./wk",
        "to": "wkhtmltopdf"
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
